From 316a74d620a322aee9dd1e4f040e1292fd0e69b1 Mon Sep 17 00:00:00 2001
From: Conor Dooley <conor.dooley@microchip.com>
Date: Fri, 3 Dec 2021 11:22:49 +0000
Subject: [PATCH 84/93] riscv: dts: add 62.5 Meg fabric clk to icicle kit

---
 arch/riscv/boot/dts/microchip/microchip-mpfs-fabric.dtsi | 9 ++++++++-
 1 file changed, 8 insertions(+), 1 deletion(-)

diff --git a/arch/riscv/boot/dts/microchip/microchip-mpfs-fabric.dtsi b/arch/riscv/boot/dts/microchip/microchip-mpfs-fabric.dtsi
index 1fc4d8c4c337..69c70a64e7ee 100644
--- a/arch/riscv/boot/dts/microchip/microchip-mpfs-fabric.dtsi
+++ b/arch/riscv/boot/dts/microchip/microchip-mpfs-fabric.dtsi
@@ -28,12 +28,19 @@ ihc: ihc {
 		status = "disabled";
 	};
 
+	fabric_clk3: clk {
+		compatible = "fixed-clock";
+		#clock-cells = <0>;
+		clock-frequency = <62500000>;
+		clock-output-names = "fclk";
+	};
+
 	i2c2: i2c@44000000 {
 		compatible = "microchip,core-i2c";
 		reg = <0x0 0x44000000 0x0 0x1000>;
 		#address-cells = <1>;
 		#size-cells = <0>;
-		clocks = <&clkcfg CLK_FIC3>;
+		clocks = <&fabric_clk3>;
 		interrupt-parent = <&plic>;
 		interrupts = <PLIC_INT_FABRIC_F2H_4>;
 		clock-frequency = <100000>;
