Subject: [PATCH 78/93] riscv: defconfig: icicle-kit: enable rpmsg sample
 client and char drivers in amp

---
 arch/riscv/configs/icicle_kit_amp_defconfig | 4 +++-
 1 file changed, 3 insertions(+), 1 deletion(-)

diff --git a/arch/riscv/configs/icicle_kit_amp_defconfig b/arch/riscv/configs/icicle_kit_amp_defconfig
index d82a20a5c748..a0d8bae6f2f6 100644
--- a/arch/riscv/configs/icicle_kit_amp_defconfig
+++ b/arch/riscv/configs/icicle_kit_amp_defconfig
@@ -122,7 +122,7 @@ CONFIG_VIRTIO_PCI=y
 CONFIG_VIRTIO_BALLOON=y
 CONFIG_VIRTIO_INPUT=y
 CONFIG_VIRTIO_MMIO=y
-CONFIG_RPMSG_CHAR=y
+CONFIG_RPMSG_CHAR=m
 CONFIG_RPMSG_VIRTIO=y
 CONFIG_EXT4_FS=y
 CONFIG_EXT4_FS_POSIX_ACL=y
@@ -163,6 +163,8 @@ CONFIG_DEBUG_SG=y
 CONFIG_RCU_EQS_DEBUG=y
 CONFIG_DEBUG_BLOCK_EXT_DEVT=y
 # CONFIG_FTRACE is not set
+CONFIG_SAMPLES=y
+CONFIG_SAMPLE_RPMSG_CLIENT=m
 # CONFIG_RUNTIME_TESTING_MENU is not set
 CONFIG_MEMTEST=y
 # CONFIG_SYSFS_SYSCALL is not set
